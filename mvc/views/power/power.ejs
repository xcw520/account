<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta name="renderer" content="webkit">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<title>权限列表</title>
		<link rel="stylesheet" type="text/css" href="/static/admin/layui/css/layui.css" />
		<link rel="stylesheet" type="text/css" href="/static/admin/css/admin.css" />
		<link rel="stylesheet" href="/power/power/css/power.css">
	</head>

	<body>
		<div class="page-content-wrap">
			<form class="layui-form" action="">
				<div class="layui-form-item">
					<div class="layui-inline tool-btn">
						<button class="layui-btn layui-btn-small layui-btn-normal go-btn hidden-xs" data-url="/power/addpower">添加权限</button>
						<div id="role">
							<% data.forEach(item=>{ %>
								<div class="first">
									<a><%= item.id %></a>&nbsp;
									<a><%= item.name%></a><a>&nbsp;
									<a href="/power/changepower?powerid=<%= item.id %>">&nbsp;<i class="layui-icon layui-icon-edit">&#xe642;</i></a>
									<a href="/power/delete?del=<%= item.id %>"><i class="layui-icon layui-icon-delete">&#xe640;</i></a>
									
								</div>
								
								<% if(item.child instanceof Array){ %>
									<% item.child.forEach(el=>{ %>
										<div class="second">
											<a><%= el.id %></a>&nbsp;
											<a ><%= el.name%></a>
											<a href="/power/changepower?powerid=<%= el.id %>">&nbsp;<i class="layui-icon layui-icon-edit">&#xe642;</i></a>
											<a href="/power/delete?del=<%= el.id %>"><i class="layui-icon layui-icon-delete">&#xe640;</i></a>
											
											
										</div>
										<% if(el.child instanceof Array){ %>
											<% el.child.forEach(element=>{ %>
												<div class="third">
													<a><%= element.id %></a>&nbsp;
													<a><%= element.name %></a>
													<a href="/power/changepower?powerid=<%= element.id %>">&nbsp;<i class="layui-icon layui-icon-edit">&#xe642;</i></a>
													<a href="/power/delete?del=<%= element.id %>"><i class="layui-icon layui-icon-delete">&#xe640;</i></a>
												
												</div>

											<% }); %>
										<% } %>

									<% }) %>

								<% } %>
						
							<% }); %>
						</div>
						
					</div>
				
				</div>
			</form>
			
		</div>
		<script src="/static/admin/layui/layui.js" type="text/javascript" charset="utf-8"></script>
		<script src="/static/admin/js/common.js" type="text/javascript" charset="utf-8"></script>
		<script src="/power/power/js/power.js"></script>
	</body>

</html>