<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport"
		content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
	<title>修改权限</title>
	<link rel="stylesheet" type="text/css" href="/static/admin/layui/css/layui.css" />
	<link rel="stylesheet" type="text/css" href="/static/admin/css/admin.css" />
</head>

<body>
	<div class="wrap-container">
		<form class="layui-form" style="width: 90%;padding-top: 20px;">
			<div class="layui-form-item">
				<label class="layui-form-label">一级菜单：</label>
				<div class="layui-input-block">
					<select id="first" lay-filter="first" name="power1" lay-verify="required">
						<option value="0">请选择</option>
						<% data.forEach(item=>{%>
							<% if (item.power_id == info.power1) {	%>
								<option value="<%= item.power_id %>" selected><%= item.power_name %></option>
							<% } else { %>
								<option value="<%= item.power_id %>"><%= item.power_name %></option>
							<% } %>
							<% }); %>
					</select>
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">二级菜单：</label>
				<div class="layui-input-block">
					<select id="secondMenu" name="power2" lay-verify="required">
						<option value="0">请选择</option>
						<% data2.forEach(item=>{%>
							<% if (item.power_id == info.power2) {	%>
								<option value="<%= item.power_id %>" selected><%= item.power_name %></option>
							<% } else { %>
								<option value="<%= item.power_id %>"><%= item.power_name %></option>
							<% } %>
							<% }); %>
					</select>
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">权限名称：</label>
				<div class="layui-input-block">
					<input type="text" name="power_name" required lay-verify="required" placeholder="请输入权限名称"
						autocomplete="off" class="layui-input" value="<%= info.power_name %>">
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">C/A：</label>
				<div class="layui-input-block">
					<input type="text" name="power_c_a" required lay-verify="required" placeholder="请输入权限C/A"
						autocomplete="off" class="layui-input" value="<%= info.power_c_a %>">
				</div>
			</div>


			<div class="layui-form-item">
				<label class="layui-form-label">菜单状态：</label>
				<div class="layui-input-block">
					<% if (info.power_flag == 0) { %>
						<input type="radio" name="flag" value="1" title="显示">
						<input type="radio" name="flag" value="0" title="隐藏" checked>
					<% } else { %>
						<input type="radio" name="flag" value="1" title="显示" checked>
						<input type="radio" name="flag" value="0" title="隐藏">
					<% } %>
				</div>

			</div>

			<div class="layui-form-item">
				<div class="layui-input-block">
					<button class="layui-btn layui-btn-normal" lay-submit lay-filter="formDemo">立即提交</button>
					<button type="reset" class="layui-btn layui-btn-primary">重置</button>
				</div>
			</div>
		</form>
	</div>

	<script src="/static/admin/layui/layui.js" type="text/javascript" charset="utf-8"></script>
	<script src="/js/ajax.js"></script>
	<script src="/power/changepower/js/changepower.js"></script>
</body>

</html>