<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="renderer" content="webkit">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<title>角色列表</title>
		<link rel="stylesheet" type="text/css" href="../../static/admin/layui/css/layui.css" />
		<link rel="stylesheet" type="text/css" href="../../static/admin/css/admin.css" />
	</head>
	<body>
		<div class="page-content-wrap">
				<form class="layui-form" action="">
					<div class="layui-form-item">
						<div class="layui-inline tool-btn">
							<button class="layui-btn layui-btn-small layui-btn-normal go-btn hidden-xs" data-url="/role/addrole"><i class="layui-icon">&#xe654;</i></button>
						</div>
					</div>
				</form>
				<div class="layui-form" id="table-list">
					<table class="layui-table" lay-even lay-skin="nob">
						<colgroup>
							<col width="50">
							<col class="hidden-xs" width="50">
							<col class="hidden-xs" width="100">
							<col>
							<col width="80">
							<col width="150">
						</colgroup>
						<thead>
							<tr>
								<th style="padding-left: 50px;">ID</th>
								<th style="padding-left: 150px;">角色名称</th>
								<th style="text-align: center;">操作</th>
							</tr>
						</thead>
						<tbody>
							<% data.forEach(item=>{ %>
								<tr>
									<td  style="padding-left: 50px;"><%= item.role_id %></td>
									<td style="padding-left: 150px;"><%= item.role_name %></td>
									<td style="text-align: center;">
										<div class="layui-inline">
											<a class="layui-btn layui-btn-mini layui-btn-normal" href="/role/changerole?id=<%= item.role_id %>"><i class="layui-icon">&#xe642;</i></a>
											<button class="layui-btn layui-btn-mini layui-btn-danger del-btn" data-id="<%= item.role_id %>" data-url="/role/delete"><i class="layui-icon">&#xe640;</i></button>
										</div>
									</td>
								</tr>
							<% }) %>
						</tbody>
					</table>
				</div>
		</div>
		<script src="/static/admin/layui/layui.js" type="text/javascript" charset="utf-8"></script>
		<script src="/static/admin/js/common.js" type="text/javascript" charset="utf-8"></script>
	</body>
</html>